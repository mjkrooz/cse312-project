<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="form.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        
    </style>
    <title>Social Media Posts</title>
</head>
<body>

    <div class="container">
        <div class="form-group">
            <input type="button" value="Return to Home" onclick="window.location.href='/';">
        </div>
        <h1>Create a new Post!</h1>
        <form id="post-form" enctype="multipart/form-data">

            <div class="form-group">
                <label for="title">Title: </label> 
                <input type="text" id="title" name="title" value="Title of the blog post" required><br><br>
            </div>

            <div class="form-group">
                <label for="banner">Banner: </label> 
                <input type="file" id="banner" name="banner" accept="image/*"><br><br>
            </div>

            <div class="form-group">
                <label for="content">Content: </label>
                <input type="text" id="content" name="content" value="The primary body of the blog post." required><br><br>
            </div>

            <div class="form-group">
                <label for="blurb">Blurb: </label>
                <input type="text" id="blurb" name="blurb" value="A short blurb under the title" required> <br><br>
            </div>

            <div class="form-group">
                <label for="blurb">Schedule Post (timezone: EST): </label>
                <input type="datetime-local" id="scheduledDatetime" name="scheduled_datetime" value="" min="2024-04-21T00:00" max="2024-06-1T00:00" />
            </div>

            <div class="form-group">
                <input type="submit" value="Send Post">
            </div>
            
        </form>
    </div>

    <script>
        function ShowAllPosts(posts){
            const postContainer = document.getElementById('post-container');
            postContainer.innerHTML='';

            posts.forEach(post => {
                const postElement = document.createElement('div');
                postElement.classList.add('post');

                const titleElement = document.createElement('h2');
                titleElement.textContent = post.title;

                postElement.appendChild(titleElement);
                postElement.appendChild(document.createElement('br'));
                postElement.appendChild(document.createElement('br'));

                postContainer.appendChild(postElement);
            });
        }
    </script>

    <script>
        document.getElementById('post-form').addEventListener('submit', function(event) {
            event.preventDefault();

            const formData = new FormData();
            formData.append('title', document.getElementById("title").value);
            formData.append('banner', document.getElementById("banner").files[0]);
            formData.append('content', document.getElementById("content").value);
            formData.append('blurb', document.getElementById("blurb").value);
            formData.append('csrfToken', '{{csrf}}');
            formData.append('scheduledDatetime', document.getElementById("scheduledDatetime").value);

            fetch('/api/v1/posts/', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    console.log('response not ok?');
                    throw new Error('RESPONSE NOT OK');
                }
                console.log('response ok');
                return response.json();
            })
            .then(data => {
                console.log('Success', data);
                alert('POST CREATED!');
                window.location = '/';
            })
            .catch(error =>{
                console.error('Error', error);
                alert('There was an error, try again')
            });
        });

    </script>
        
    <script>
        document.addEventListener('post-success', function(event) {
            event.preventDefault();

            fetch('/api/v1/posts', {
                method: 'GET'
            })
            .then(response => {
                if (!response.ok) {
                    console.log('response not ok?');
                    throw new Error('RESPONSE NOT OK');
                }
                console.log('response ok');
                return response.json();
            })
            .then(data => {
                console.log('Success', data);
                alert('Showing posts');
                ShowAllPosts(data);
            })
            .catch(error =>{
                console.error('Error', error);
                alert('There was an error, try again')
            });
        }); 
    </script>

</body>
</html>
